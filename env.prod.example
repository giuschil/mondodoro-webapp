# ==============================================
# MONDODORO - PRODUCTION ENVIRONMENT VARIABLES
# ==============================================

# Database
DB_PASSWORD=your_secure_db_password_here

# Redis
REDIS_PASSWORD=your_secure_redis_password_here

# Django
SECRET_KEY=your_very_long_secret_key_here_minimum_50_characters
DEBUG=False

# Domains & URLs
DOMAIN=mondodoro.yourdomain.com
ALLOWED_HOSTS=mondodoro.yourdomain.com,yourdomain.com,www.yourdomain.com,localhost
API_URL=https://mondodoro.yourdomain.com/api

# Stripe (Production Keys)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# ==============================================
# DEPLOYMENT OPTIONS
# ==============================================

# Option 1: Subdomain (Recommended)
# DOMAIN=mondodoro.yourdomain.com
# ALLOWED_HOSTS=mondodoro.yourdomain.com
# API_URL=https://mondodoro.yourdomain.com/api

# Option 2: Path-based
# DOMAIN=yourdomain.com
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# API_URL=https://yourdomain.com/mondodoro/api

# Option 3: Port-based
# DOMAIN=yourdomain.com:8080
# ALLOWED_HOSTS=yourdomain.com
# API_URL=https://yourdomain.com:8080/api

